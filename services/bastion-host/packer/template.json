{
    "variables": {
        "aws_access_key": "",
        "aws_region": "",
        "aws_secret_key": "",
        "script_path": "bastion-setup"
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `aws_region`}}",
        "ami_name": "csg/images/csg-bastion-{{isotime \"20060102-030405\"}}",
        "ami_description": "A hardened image for use as a bastion host.",
        "encrypt_boot": true,
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
                "root-device-type": "ebs"
            },
            "owners": ["099720109477"],
            "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "tags": {
            "Name": "csg-bastion"
        }
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [
            "rm /home/*/.ssh/authorized_keys",
            "sudo rm /root/.ssh/authorized_keys"
        ]
    },{
        "type": "ansible",
        "playbook_file": "./playbook.yml"
    },{
        "type": "file",
        "source": "cloudwatch-config.json",
        "destination": "/tmp/cloudwatch-config.json"
    },{
        "type": "shell",
        "script": "{{user `script_path`}}"
    }]
}
