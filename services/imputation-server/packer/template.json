{
    "variables": {
        "aws_access_key": "",
        "aws_region": "",
        "aws_secret_key": "",
        "script_path": "bootstrap.sh"
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `aws_region`}}",
        "ami_name": "imputation-server-{{isotime \"20060102-030405\"}}",
        "ami_description": "Base AMI for imputation server EMR instances",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "amzn-ami-hvm-2018.03*",
                "root-device-type": "ebs"
            },
            "owners": ["137112412989"],
            "most_recent": true
        },
        "instance_type": "t2.large",
        "ssh_username": "ec2-user",
        "tags": {
            "Name": "imputation-server-base"
        }
    }],
    "provisioners": [{
        "type": "file",
        "source": "node_exporter.conf",
        "destination": "/tmp/node_exporter.conf"
    },{
        "type": "file",
        "source": "cloudwatch-config.json",
        "destination": "/tmp/cloudwatch-config.json"
    },{
        "type": "shell",
        "script": "{{user `script_path`}}"
    }]
}